<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" asp-action="Start" asp-controller="Home" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label asp-for="userName" class="text-info">Username:</label><br>
                                <input asp-for="userName" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="password" class="text-info">Password:</label><br>
                                <input asp-for="password" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="rememberMe" class="text-info"><span>Remember me</span>Â <span><input asp-for="rememberMe" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
